{# pour ajouter l'affichage des flashs : #}
        {% for label, messages in app.flashes %}
            {# label = clés et messages = valeur du tableau app.flashes qui regroupe tous les flashes#}
            <div class=" container">
                <div class="alert alert-{{ label }}">
                    {# label correspond à danger, success, etc. Ce sont des classes bootstrap du coup #}
                    {% for message in messages %}
                        <p>{{ message | raw }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}


