{% extends 'base.html.twig' %}

{% block title %}
    {{ ad.title }}
{% endblock %}

{% block body %}

    <div class="ad-title" style="background-image: url({{ ad.coverImage }})">
        <div class="container">
            <h1>
                {{ ad.title }}
            </h1>
            <p>
                {{ ad.introduction }}
            </p>
            <p class="h2">
                <strong>{{ ad.rooms }} chambres </strong> pour <strong>{{ ad.price }}&euro;</strong> par nuit
            </p>
            <a href="#" class="btn btn-primary">Réserver !</a>

            {% if app.user and app.user == ad.author %}
                <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-secondary">Modifier l'annonce</a>
                <a href="{{ path('ads_delete', {'slug': ad.slug}) }}" class="btn btn-danger"
                   onclick="return confirm(`Etes-vous sûr de vouloir supprimer l'annonce {{ ad.title }}?`)">Supprimer
                    l'annonce</a>
            {% endif %}
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-3">
                {{ ad.content | raw }}
                <!-- raw pour afficher le texte snas les balises apparentes -->

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in ad.images %}
                            {# pour changer le nb d'indicateurs selon le nb d'images #}
                            <li data-target="#carouselExampleIndicators"
                                data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
                            {# loop.index0  va indiquer à quel index de la boucle on est #}
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in ad.images %}
                            <div class="carousel-item {% if loop.first %} active {% endif %}">
                                {#on met une boucle loop pour vérifier si c'est la première image car seule la première image doit avorir la classe active #}
                                <img src="{{ image.url }}" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ ad.title }}</h5>
                                    <p>{{ image.caption }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>


            <div class="col">
                {% set a = ad.author %}
                <div class="row mb-3 align-items-center">
                    <div class="col-3">
                        <a href="{{ path('user_show', {'slug' : a.slug}) }}">
                            <img src="{{ a.picture }}" class="avatar avatar-medium" alt="Avatar de {{ a.fullName }}">
                        </a>
                    </div>
                    <div class="col">
                        <a href="{{ path('user_show', {'slug' : a.slug}) }}">
                            <h3>{{ a.fullName }}</h3>
                        </a>
                        <span class="badge badge-primary">{{ a.ads | length }} annonces</span>
                    </div>
                </div>{{ a.description | raw }}</div>
        </div>
    </div>


{% endblock %}
